@model IEnumerable<MvcCrudDept.Models.Departamento>

@{
    //ViewData["Title"] = "Index";
}

<h1>Listado de Departamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Crear nuevo dept</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-controller="Departamentos"
                asp-action="Edit"
                asp-route-iddepartamento="@item.IdDepartamento"
                class="btn btn-outline-info">
                Editar</a>
            </td>
            <td>
               <a asp-controller="Departamentos"
               asp-action="Delete"
               asp-route-iddepartamento="@item.IdDepartamento"
               class="btn btn-outline-danger">
                    Borrar</a>
                </td>
        </tr>
}
    </tbody>
</table>
